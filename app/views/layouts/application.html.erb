<!DOCTYPE html>
<html>
  <head>
    <title>Traveljournal.com</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Traveljournal.com</span>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if @current_user %>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/places">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/logout">Log out</a>
              </li>
              <li class="navbar-item">
                Hey, <%= @current_user["username"] %>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/login">Log in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/users/new">Sign up</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>  
 
  <div class="container mt-3">
    <div class="row">
      <div class="col text-center">
        <%= flash["notice"] %>
      </div>
    </div>

    <%= yield %>
  </div>  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>

